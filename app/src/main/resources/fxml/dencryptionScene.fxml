<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>


<GridPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8"
          fx:controller="stenography.FXMLController" stylesheets="/css/cssStyles.css" styleClass="gridPane">

    <Button text="Input filename" GridPane.columnIndex="1" GridPane.rowIndex="1"
            onMouseClicked="#handleInputChooserButtonAction" styleClass="buttonStyle"/>

    <TextField promptText="Decryption key" GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="keyField"
               onKeyPressed="#handleDecryptionButtonAction"/>

    <Button text="Decrypt the message" GridPane.columnIndex="1" GridPane.rowIndex="3"
            onAction="#handleDecryptionButtonAction"/>

    <Button text="Return" GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="returnButton"
            onMouseClicked="#handleCommandButtonAction" styleClass="buttonStyle"/>

    <Button text="Exit" GridPane.columnIndex="1" GridPane.rowIndex="5" fx:id="exitButton"
            onMouseClicked="#handleCommandButtonAction" styleClass="buttonStyle"/>

</GridPane>

